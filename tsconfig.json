{
    "compilerOptions": {
      "target": "ES2015",
      "lib": ["es2015", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "alwaysStrict": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "outDir": "lib",
      "rootDir": "src",
      "jsx": "react"
    },
    "exclude": [
      "node_modules",
      ".npm",
      "__test__"
    ]
  }
